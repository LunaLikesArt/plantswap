<br />

<div class="plantbox col-xs-8 col-xs-offset-2">
  <br />
  <h2>Sign in</h2>
  <br />

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.input :email, autofocus: true %>
  <br />

  <%= f.input :password %>
  <br />

  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end -%>
  <br />

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-success btn-sm' %>
  </div>
  <% end %>
  <br />

  <%= render "devise/shared/links" %>
  <br />
  
</div>
