<div class="container-fluid">
  <div class="row">
    <div class=" col-xs-10 col-xs-offset-1">

      <div class="text-center">
        <h1>My Plants</h1>
      </div>

      <% if @user.plants.blank? %>
      <br />
      <div class="text-center">
        <h4> You don't have any plants yet. </h4>
      </div>
      <br />

      <% else %>

      <br />

      <div class="container-fluid">
        <% @user.plants.each do |plant| %>
        <div class="row">
          <div class="plantbox col-xs-12">
            <br />
            <div class="text-center">
              <h4> <%= link_to plant.name, plant_path(plant) %> </h4>
            </div>
            <br />
            <div class="row">
              <div class="col-xs-3">
                <% plant.photos.each do |photo| %>
                <%= image_tag photo.picture, class: 'img-responsive' %>
                <% end %>
              </div>
            </div>
            <%= link_to edit_plant_path(plant), class: 'btn btn-default btn btn-sm pull-right' do %>
            Edit
            <% end %>
            <br />
            <br />
          </div>
        </div>
        <br>
        <% end %>
      </div>

      <% end %>

    </div>
  </div>
</div>

