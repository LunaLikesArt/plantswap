<div class="container-fluid">
  <div class="row">
    <div class="plantbox col-xs-10 col-xs-offset-1">
      <br />

      <div class="row">
        <div class="user_info col-sm-8 text-center">
          <h3> My Plants </h3>
          <br />
          <!-- <h4>User: <%= @user.email.split('@')[0] %></h4> -->
          <h4> <%= @user.email %></h4>
          <h5> Member since: <%= @user.created_at.strftime("%B %d, %Y") %> </h5>
        </div>
        <div class="pretty_pot_container col-sm-2">
          <%= image_tag 'flower-large.png', class: 'pretty_pot' %>
        </div>
      </div>

      <div class="col-xs-10 col-xs-offset-1">
        <hr>
      </div>

      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <% if @user.plants.blank? %>
          <div class="no-plant-user-profile text-center">
            You haven't listed a plant yet.
            <br />
            <br />
            <%= link_to 'List your Plant', new_plant_path, class: 'btn btn-default btn-sm' %>
            <br />
            <br />
          </div>

          <% else %>

          <% @user.plants.each do |plant| %>
          <div class="row">
            <div class="plant-name-user-profile col-xs-12">
              <%= link_to plant.name, plant_path(plant) %>
              <%= link_to edit_plant_path(plant), class: 'btn btn-default btn-sm pull-right' do %>
              Edit Details
              <% end %>
            </div>
          </div>

          <br />

          <div class="row">
            <div class="col-xs-12">
              <%= plant.description.truncate(250) %>
            </div>
          </div>

          <% if @user.plants.count > 1 && plant != @user.plants.last %>
          <hr>
          <% end %>

          <% if @user.plants.count > 1 && plant == @user.plants.last %>
          <br />
          <br />
          <% end %>

          <!-- end of loop -->
          <% end %>
          <!-- end of if statement -->
          <% end %>

        </div>
      </div>
    </div>
  </div>

</div>

<br />
<br />
